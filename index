    <script>
        // Конфигурация Supabase
        const SUPABASE_URL = 'https://bqycjfcjtdawyrysgrbw.supabase.co';
        const SUPABASE_ANON_KEY = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6ImJxeWNqZmNqdGRhd3lyeXNncmJ3Iiwicm9sZSI6ImFub24iLCJpYXQiOjE3NjY2MDE5NzAsImV4cCI6MjA4MjE3Nzk3MH0.LEOUMFAd1cz_1e4uawJcaZLPCMqAQHEWM52Oy7fDjsE';

        // Инициализация Supabase
        let supabase;
        
        // Глобальные переменные
        let currentUser = null;
        let isAdmin = false;
        let currentBet = null;

        // Инициализация
        document.addEventListener('DOMContentLoaded', function() {
            // Инициализируем Supabase
            supabase = window.supabase.createClient(SUPABASE_URL, SUPABASE_ANON_KEY);
            
            // Проверяем, есть ли сохраненный пользователь
            const savedUser = localStorage.getItem('currentUser');
            if (savedUser) {
                currentUser = JSON.parse(savedUser);
                updateNavForUser();
            }
            
            // Загружаем данные
            loadData();
            
            // Обработчики событий
            setupEventListeners();
        });

        // Настройка обработчиков событий
        function setupEventListeners() {
            document.getElementById('loginBtn').addEventListener('click', function(e) {
                e.preventDefault();
                if (currentUser) {
                    showPlayerInfo();
                } else {
                    openModal('loginModal');
                }
            });

            document.getElementById('adminBtn').addEventListener('click', function(e) {
                e.preventDefault();
                openModal('adminModal');
            });

            document.getElementById('loginForm').addEventListener('submit', function(e) {
                e.preventDefault();
                loginUser();
            });

            // Обработчик закрытия модальных окон при клике вне
            window.addEventListener('click', function(event) {
                if (event.target.classList.contains('modal')) {
                    event.target.style.display = 'none';
                }
            });
        }

        // Загрузка всех данных
        async function loadData() {
            try {
                await Promise.all([
                    updateStats(),
                    loadLiveMatches(),
                    loadLeaderboard()
                ]);
            } catch (error) {
                showNotification('Ошибка загрузки данных: ' + error.message, 'error');
            }
        }

        // Обновление статистики
        async function updateStats() {
            try {
                // Получаем количество игроков
                const { count: playersCount } = await supabase
                    .from('player_cabinets')
                    .select('*', { count: 'exact', head: true });
                
                // Получаем LIVE матчи
                const { count: liveMatchesCount } = await supabase
                    .from('bet_matches')
                    .select('*', { count: 'exact', head: true })
                    .eq('status', 'live');
                
                // Получаем общее количество жетонов
                const { data: players } = await supabase
                    .from('player_cabinets')
                    .select('tokens');
                
                const totalTokens = players ? players.reduce((sum, p) => sum + (p.tokens || 0), 0) : 0;
                
                // Обновляем UI
                document.getElementById('total-players').textContent = playersCount || 0;
                document.getElementById('live-matches').textContent = liveMatchesCount || 0;
                document.getElementById('total-bets').textContent = totalTokens;
                
            } catch (error) {
                console.error('Ошибка обновления статистики:', error);
            }
        }

        // Загрузка LIVE матчей
        async function loadLiveMatches() {
            try {
                const grid = document.getElementById('live-matches-grid');
                grid.innerHTML = '<div class="loading"><i class="fas fa-spinner fa-spin"></i> Загрузка матчей...</div>';
                
                const { data: matches, error } = await supabase
                    .from('bet_matches')
                    .select('*')
                    .in('status', ['live', 'pending'])
                    .order('date', { ascending: true });
                
                if (error) throw error;
                
                if (!matches || matches.length === 0) {
                    grid.innerHTML = '<div class="loading">Нет активных матчей</div>';
                    return;
                }
                
                grid.innerHTML = '';
                
                matches.forEach(match => {
                    const matchCard = createMatchCard(match);
                    grid.appendChild(matchCard);
                });
                
            } catch (error) {
                document.getElementById('live-matches-grid').innerHTML = 
                    '<div class="error-message">Ошибка загрузки матчей</div>';
                console.error('Ошибка загрузки матчей:', error);
            }
        }

        // Создание карточки матча
        function createMatchCard(match) {
            const matchCard = document.createElement('div');
            matchCard.className = 'match-card';
            
            const odds = match.odds || calculateOdds(match.player1_rating, match.player2_rating);
            
            matchCard.innerHTML = `
                <div class="match-header">
                    <div>
                        <small>${new Date(match.date).toLocaleDateString('ru-RU')}</small>
                    </div>
                    <span class="match-status ${match.status === 'live' ? 'status-live' : ''}">
                        ${match.status === 'live' ? 'LIVE' : 'Скоро'}
                    </span>
                </div>
                <div class="match-players">
                    <div class="player">
                        <div class="player-avatar">${match.player1 ? match.player1.charAt(0).toUpperCase() : '?'}</div>
                        <div class="player-name">${match.player1 || 'Игрок 1'}</div>
                        <div class="player-rating">${match.player1_rating || 1000}</div>
                    </div>
                    <div class="vs">VS</div>
                    <div class="player">
                        <div class="player-avatar">${match.player2 ? match.player2.charAt(0).toUpperCase() : '?'}</div>
                        <div class="player-name">${match.player2 || 'Игрок 2'}</div>
                        <div class="player-rating">${match.player2_rating || 1000}</div>
                    </div>
                </div>
                <div class="match-odds">
                    <button class="odds-btn" onclick="prepareBet('${match.id}', 'player1', ${odds.player1 || 1.5}, '${match.player1}')">
                        П1
                        <span class="odds-value">${(odds.player1 || 1.5).toFixed(2)}</span>
                    </button>
                    <button class="odds-btn" onclick="prepareBet('${match.id}', 'player2', ${odds.player2 || 2.5}, '${match.player2}')">
                        П2
                        <span class="odds-value">${(odds.player2 || 2.5).toFixed(2)}</span>
                    </button>
                </div>
            `;
            
            return matchCard;
        }

        // Расчет коэффициентов
        function calculateOdds(rating1, rating2) {
            const diff = Math.abs(rating1 - rating2);
            let favoriteOdds = 1.3;
            let underdogOdds = 3.5;
            
            if (diff < 100) {
                favoriteOdds = 1.8;
                underdogOdds = 1.9;
            } else if (diff < 200) {
                favoriteOdds = 1.5;
                underdogOdds = 2.5;
            } else if (diff < 300) {
                favoriteOdds = 1.4;
                underdogOdds = 3.0;
            }
            
            if (rating1 > rating2) {
                return {
                    player1: favoriteOdds,
                    player2: underdogOdds,
                    favorite: 'player1'
                };
            } else {
                return {
                    player1: underdogOdds,
                    player2: favoriteOdds,
                    favorite: 'player2'
                };
            }
        }

        // Загрузка таблицы лидеров
        async function loadLeaderboard() {
            try {
                const tbody = document.getElementById('leaderboard-body');
                tbody.innerHTML = '<tr><td colspan="6" class="loading"><i class="fas fa-spinner fa-spin"></i> Загрузка...</td></tr>';
                
                const { data: players, error } = await supabase
                    .from('player_cabinets')
                    .select('*')
                    .order('tokens', { ascending: false })
                    .limit(10);
                
                if (error) throw error;
                
                if (!players || players.length === 0) {
                    tbody.innerHTML = '<tr><td colspan="6" class="loading">Нет данных об игроках</td></tr>';
                    return;
                }
                
                tbody.innerHTML = '';
                
                players.forEach((player, index) => {
                    const row = document.createElement('tr');
                    row.innerHTML = `
                        <td class="player-rank">${index + 1}</td>
                        <td>
                            <div style="display: flex; align-items: center; gap: 10px;">
                                <div class="player-avatar" style="width: 40px; height: 40px; font-size: 1rem;">
                                    ${player.player_name ? player.player_name.charAt(0).toUpperCase() : '?'}
                                </div>
                                ${player.player_name || 'Без имени'}
                            </div>
                        </td>
                        <td>${player.rating || 1000}</td>
                        <td><i class="fas fa-coins" style="color: var(--warning);"></i> ${player.tokens || 0}</td>
                        <td>${player.bets_made || 0}</td>
                        <td>${player.total_won || 0}</td>
                    `;
                    tbody.appendChild(row);
                });
                
            } catch (error) {
                document.getElementById('leaderboard-body').innerHTML = 
                    '<tr><td colspan="6" class="error-message">Ошибка загрузки таблицы лидеров</td></tr>';
                console.error('Ошибка загрузки таблицы лидеров:', error);
            }
        }

        // Вход пользователя
        async function loginUser() {
            const username = document.getElementById('loginUsername').value.trim();
            const password = document.getElementById('loginPassword').value.trim();
            
            if (!username || !password) {
                showNotification('Введите логин и пароль', 'error');
                return;
            }
            
            try {
                const { data: players, error } = await supabase
                    .from('player_cabinets')
                    .select('*')
                    .eq('login', username)
                    .eq('password', password)
                    .single();
                
                if (error) throw error;
                
                if (players) {
                    currentUser = players;
                    localStorage.setItem('currentUser', JSON.stringify(currentUser));
                    showNotification('Вход выполнен успешно!', 'success');
                    closeModal('loginModal');
                    updateNavForUser();
                    loadLiveMatches(); // Обновляем матчи для показа кнопок ставок
                } else {
                    showNotification('Неверный логин или пароль', 'error');
                }
                
            } catch (error) {
                showNotification('Ошибка входа: ' + error.message, 'error');
                console.error('Ошибка входа:', error);
            }
        }

        // Вход администратора
        function enterAdminPanel() {
            const password = document.getElementById('adminPassword').value;
            
            // Пароль администратора (замените на свой)
            const ADMIN_PASSWORD = 'admin123';
            
            if (password === ADMIN_PASSWORD) {
                isAdmin = true;
                showNotification('Добро пожаловать в панель администратора!', 'success');
                closeModal('adminModal');
                showAdminPanel();
            } else {
                showNotification('Неверный пароль администратора', 'error');
            }
        }

        // Обновление навигации
        function updateNavForUser() {
            const loginBtn = document.getElementById('loginBtn');
            if (currentUser) {
                loginBtn.innerHTML = `<i class="fas fa-user-circle"></i> ${currentUser.player_name || 'Игрок'}`;
            } else {
                loginBtn.innerHTML = `<i class="fas fa-user"></i> Войти`;
            }
        }

        // Показать информацию об игроке
        async function showPlayerInfo() {
